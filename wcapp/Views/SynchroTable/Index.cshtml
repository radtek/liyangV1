@using WCAPP.Models.Database

<div style="border: 1px solid #eee; padding: 10px;">
    <div class="tabbable">
        <ul class="nav nav-tabs">
            <li class="active">
                <a style="font-size:16px" href="#tab1" data-toggle="tab">摆渡导出中间表</a>
            </li>
            <li>
                <a style="font-size: 16px" href="#tab2" data-toggle="tab">摆渡导入中间表</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>
                                <div class="text-left">
                                    @using (Html.BeginForm("Index", "SynchroTable", new { PageNo = ViewBag.PageNo }))
                            {
                                @:零件编号：@Html.TextBox("searchId")@*@Html.DropDownList("id", (SelectList)ViewBag.Pagelist)*@
                                <input type="submit" value="检索" />
                    }
                                </div>
                            </th>
                        </tr>
                    </thead>

                </table>

                @using (Ajax.BeginForm("ExportSynchroTable", "SynchroTable", new AjaxOptions { HttpMethod = "POST", OnSuccess = "downloadTask" }))
        {
            <table class="table table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th class="text-center"><input type="checkbox" id="selAll" onclick="swapCheck()" />全选</th>
                        <th class="text-center">任务编号</th>
                        <th class="text-center">零件编号</th>
                        <th class="text-center">批次号</th>
                        <th class="text-center">工序号</th>
                        <th class="text-center">派工数量</th>
                        <th class="text-center">分工代码</th>
                        <th class="text-center">设备编号</th>
                        <th class="text-center">员工编号</th>
                        <th class="text-center">计划起始时间</th>
                        <th class="text-center">计划终止时间</th>
                        <th class="text-center">实际起始时间</th>
                        <th class="text-center">实际终止时间</th>
                        <th class="text-center">实际焊接时间</th>
                        <th class="text-center">摆渡导出时间</th>
                        <th class="text-center">摆渡状态</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.SynchroTable != null)
            {
                foreach (SynchroTable synchroTable in ViewBag.SynchroTable)
                {
                    <tr>
                        <td><input type="checkbox" name="syncId" value="@synchroTable.taskNo" /></td>
                        <td>@synchroTable.taskNo</td>
                        <td>@synchroTable.partNo</td>
                        <td>@synchroTable.batchNo</td>
                        <td>@synchroTable.seqNo</td>
                        <td>@synchroTable.countNum</td>
                        <td>@synchroTable.facCode</td>
                        <td>@synchroTable.weldNo</td>
                        <td>@synchroTable.welderNo</td>
                        <td>@synchroTable.startTime</td>
                        <td>@synchroTable.endTime</td>
                        <td>@synchroTable.realStartTime</td>
                        <td>@synchroTable.realEndTime</td>
                        <td>@synchroTable.weldTime</td>
                        <td>@synchroTable.importTime</td>
                        @if (synchroTable.importState)
    {
                    <td><div>已导出</div></td> }
else
{
                    <td><div>未导出</div></td>
}
                    </tr>
        }
    }
                </tbody>
            </table>

            <div style="margin: 0 auto; text-align: right;">
                共<font color="red"> @ViewBag.PageCount </font>页，当前是第<font style="color:red"> @ViewBag.PageNo </font>页
                @Html.ActionLink("首页", "Index", new { pageNo = 1, searchId = ViewBag.SearchId, pageSize = ViewBag.PageSizes })
                @Html.ActionLink("上一页", "Index", "SynchroTable", new { pageNo = (int)ViewBag.PageNo - 1, searchId = ViewBag.SearchId, pageSize = ViewBag.PageSizes }, null)
                @Html.ActionLink("下一页", "Index", "SynchroTable", new { pageNo = (int)ViewBag.NextPageNo, searchId = ViewBag.SearchId, pageSize = ViewBag.PageSizes }, null)
                @Html.ActionLink("尾页", "Index", new { pageNo = (int)ViewBag.PageCount, searchId = ViewBag.SearchId, pageSize = ViewBag.PageSizes })
            </div>


            <div style="text-align:center">
                <button type="submit" class="btn btn-primary">生成Sync文件</button>
            </div>
}
                <div style="display:inline-block;float:left">
                    @using (Html.BeginForm("Index", "SynchroTable"))
            {
                @:页码：@Html.DropDownList("pageSize", (SelectList)ViewBag.PageSize)<input type="submit" value="Go" />
}
                </div>
                <div style="display:inline-block;float:right">
                    @using (Html.BeginForm("Index", "SynchroTable"))
            {
                @:转到：@Html.DropDownList("pageNo", (SelectList)ViewBag.Pagelist)<input type="submit" value="Go" />
}
                </div>

            </div>
            <div class="tab-pane" id="tab2">
                <form id="sync" method="post" onsubmit="return uploadSync()">
                    <div>
                        请选择Sync文件
                        <div style="padding: 10px">
                            <input type="file" name="file" />
                        </div>
                        <div style="padding: 10px;float:left">
                            <input type="submit" class="btn btn-primary" value="导入" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="box" title="请点击链接下载Sync文件" style="text-align: center; padding: 20px">
    <a id="link" style="color: red"></a>
</div>

@section scripts {
    <script>

            var checkFile = false;

        function uploadSync() {
            $("#sync").ajaxSubmit({
                url: "@Url.Action("ImportSync")",
                type: "post",
                resetForm:true,
                success: function(data) {
                    data = JSON.parse(data);
                    if (data.succeed) {
                        alert("导入成功");
                        window.location.href = "@Url.Action("Index", "SynchroTable")";
                    } else if (data.error) {
                        alert(data.error);
                    } else {
                       alert("出现错误");
                    }
                },
                error: function(err) {
                    alert(JSON.stringify(err));
                }
            });

            //不返回false会再进行一次非AJAX提交
            return false;
        }

        function uploadWcapp() {
            $("#wcapp").ajaxSubmit({
                url: checkFile ? "@Url.Action("CheckWcappFile")" : "@Url.Action("ImportWcapp")",
                type: "post",
                resetForm:true,
                success: function(data) {
                    data = JSON.parse(data);
                    if (data.succeed) {
                        //if (url=="/CheckWcappFile") {
                        //    alert("校检成功");
                        //}else{
                            alert("操作成功");
                            window.location.href = "@Url.Action("Index", "Sync")";
                        //}

                    } else if (data.error) {
                        alert(data.error);
                    } else {
                       alert("出现错误");
                    }
                },
                error: function(err) {
                    alert(JSON.stringify(err));
                }
            });

            checkFile = false;

            //不返回false会再进行一次非AJAX提交
            return false;
        }

        function downloadTask(data) {
            if (data.succeed) {
                $("#link").attr("href", "/" + data.path);
                $("#link")[0].innerText = data.name;
                $("#box").dialog({ width: "600px", modal: true });
               
            }
            if (data.error) {
                alert(data.error);
                reload();
            }
            }


            function checkWcappFile() {
                checkFile = true;
           }

            function selectAll() {
                var hobbys = document.getElementsByName("syncId");
                if (selAll.checked == true) {
                    for (var i = 0; i < hobbys.length; i++) {
                        hobbys[i].checked = true;
                    }
                } else {
                    for (var i = 0; i < hobbys.length; i++) {
                        hobbys[i].checked = false;
                    }
                }
            }
        //checkbox 全选/取消全选
        var isCheckAll = false;
        function swapCheck() {
            if (isCheckAll) {
                $("input[type='checkbox']").each(function () {
                    this.checked = false;
                });
                isCheckAll = false;
            } else {
                $("input[type='checkbox']").each(function () {
                    this.checked = true;
                });
                isCheckAll = true;
            }
        }

    </script>
}